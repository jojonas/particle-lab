% style

% page setup
\RequirePackage[
	paper=a4paper,
	nohead,
	includefoot,
	includehead,
	top=2.25cm,
	bottom=1.5cm,
	marginparwidth=1.75cm,
	marginparsep=10pt,
	footskip=2cm,
]{geometry}

% font
\RequirePackage{lmodern}
\RequirePackage{charter}

\setkomafont{title}{\Huge \fontfamily{qhv}\selectfont}
\setkomafont{part}{\huge \fontfamily{qhv}\selectfont}
\setkomafont{chapter}{\huge \fontfamily{phv}\selectfont}
\setkomafont{section}{\LARGE \fontfamily{qhv}\selectfont}
\setkomafont{subsection}{\Large \fontfamily{qhv}\selectfont}
\setkomafont{paragraph}{\fontfamily{qhv}\selectfont\small\bfseries}

% typesetting improvements
\RequirePackage{microtype}

% spacing between figures/tables and text
%\setlength{\intextsep}{1\parskip+1\baselineskip}

% table padding
\def\arraystretch{1.3}

% fancy header
\RequirePackage{fancyhdr}
\pagestyle{plain}
\newcommand{\heads}[3]{
	\fancypagestyle{plain}{
		\fancyhf{}
		\fancyhead[L]{#1}
		\fancyhead[C]{#2}
		\fancyhead[R]{#3}
		
		\fancyfoot[C]{\thepage}
	}
}
\renewcommand*{\chaptermarkformat}{}


